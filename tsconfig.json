{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
      "strict": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "target": "esnext",
      "module": "nodenext",
      "allowImportingTsExtensions": true,
      "rewriteRelativeImportExtensions": true,
      "verbatimModuleSyntax": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
  }
